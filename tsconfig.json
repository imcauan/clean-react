{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es2020",
    "moduleResolution": "bundler",
    "target": "es2020",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "src",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
